{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "*": ["./*/src"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"]
  },
  "include": ["./test/setup.ts", "./**/*.ts"],
  "exclude": ["./**/node_modules", "./**/*.graphql.d.ts"]
}
